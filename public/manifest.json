{
  "manifest_version": 3,
  "short_name": "Brow",
  "name": "Brow, the Browser Bro",
  "version": "1.0",
  "description": "A smart assistant for your browser",
  "permissions": [
        "activeTab",
        "sidePanel",
        "contextMenus"
    ],
  "action": {
    "default_popup": "index.html",
    "default_icon": "logo192.png"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["contentScript.js"],
    "run_at": "document_idle"
  }],

  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
      "service_worker": "background.js"
  },
  "action": {
    "default_icon": "logo192.png"
  },
  "side_panel": {
    "default_path": "index.html"
  }
}
